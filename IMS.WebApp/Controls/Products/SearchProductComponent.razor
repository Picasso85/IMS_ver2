<div class="input-group">
    <input type="text"
           class="form-control"
           placeholder="Type product name to search" @bind-value="productNameToSearch" />
    <button type="button" class="btn-success input-group-text" @onclick="OnSearch">
        <i class="bi bi-search" style="padding:0 0.5rem 0 0;"></i>Search</button>
</div>

@code {
    private string productNameToSearch = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearchProduct {get; set;}

    private void OnSearch()
    {
        OnSearchProduct.InvokeAsync(productNameToSearch);
    }
}
