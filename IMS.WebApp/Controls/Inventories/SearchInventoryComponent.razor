<div class="input-group">
    <input type="text"
           class="form-control"
           placeholder="Type inventory name to search" @bind-value="inventoryNameToSearch" />
    <button type="button" class="btn-success input-group-text " @onclick="OnSearch">
        <i class="bi bi-search paddingIconRight"></i>Search
    </button>
</div>

@code {

    private string inventoryNameToSearch = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearchInventory { get; set; }

    private void OnSearch()
    {
        OnSearchInventory.InvokeAsync(inventoryNameToSearch);
    }

}
